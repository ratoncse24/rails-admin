<p id="notice"><%= notice %></p>

<h1>Email Marketings</h1>

<table>
  <thead>
    <tr>
      <th>Sender name</th>
      <th>Sender email</th>
      <th>Reciver email</th>
      <th>Email subject</th>
      <th>Email body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_marketings.each do |email_marketing| %>
      <tr>
        <td><%= email_marketing.sender_name %></td>
        <td><%= email_marketing.sender_email %></td>
        <td><%= email_marketing.reciver_email %></td>
        <td><%= email_marketing.email_subject %></td>
        <td><%= email_marketing.email_body %></td>
        <td><%= link_to 'Show', email_marketing %></td>
        <td><%= link_to 'Edit', edit_email_marketing_path(email_marketing) %></td>
        <td><%= link_to 'Destroy', email_marketing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

