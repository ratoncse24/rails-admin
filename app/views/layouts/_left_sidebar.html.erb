<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag 'user2-160x160.jpg', :class=>'img-circle', :alt => "user image" %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">MAIN NAVIGATION</li>

      <li class=" <%= 'active' if controller?('dashboard') %>">
        <%= link_to("/admin") do %>
          <i class="fa fa-dashboard"></i> <span>Dashboard</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('categories') %>">
        <%= link_to( admin_categories_path ) do %>
          <i class="fa fa-star"></i> <span>Categories</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('products') %>">
        <%= link_to( admin_products_path ) do %>
          <i class="fa fa-star"></i> <span>Products</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('offers') %>">
        <%= link_to( admin_offers_path ) do %>
          <i class="fa fa-star"></i> <span>Offers</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('email_marketings') %>">
        <%= link_to( admin_email_marketings_path ) do %>
          <i class="fa fa-star"></i> <span>Email Marketing</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('sliders') %>">
        <%= link_to( admin_sliders_path ) do %>
          <i class="fa fa-star"></i> <span>Slider</span>
        <% end %>
      </li>


      <li class=" <%= 'active' if controller?('banners') %>">
        <%= link_to( admin_banners_path ) do %>
          <i class="fa fa-star"></i> <span>Banners</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('blogs') %>">
        <%= link_to( admin_blogs_path ) do %>
          <i class="fa fa-star"></i> <span>Blogs</span>
        <% end %>
      </li>

      <li class=" <%= 'active' if controller?('customers') %>">
        <%= link_to( admin_customers_path ) do %>
          <i class="fa fa-star"></i> <span>Customer</span>
        <% end %>
      </li>


      <li class=" <%= 'active' if controller?('settings') %>">
        <%= link_to( admin_settings_path ) do %>
          <i class="fa fa-connectdevelop"></i> <span>Setting</span>
        <% end %>
      </li>






    </ul>
  </section>
  <!-- /.sidebar -->
</aside>