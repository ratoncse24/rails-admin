<p id="notice"><%= notice %></p>

<h1>Admin Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Order status</th>
      <th>Order pricetotal</th>
      <th>Order payment type</th>
      <th>Order giftcard</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_orders.each do |admin_order| %>
      <tr>
        <td><%= admin_order.order_number %></td>
        <td><%= admin_order.order_status %></td>
        <td><%= admin_order.order_pricetotal %></td>
        <td><%= admin_order.order_payment_type %></td>
        <td><%= admin_order.order_giftcard %></td>
        <td><%= admin_order.customers_id %></td>
        <td><%= link_to 'Show', admin_order %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(admin_order) %></td>
        <td><%= link_to 'Destroy', admin_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

