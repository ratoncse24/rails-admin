
<div class="box">
  <div class="box-header">
    <h3 class="box-title">All Categories </h3>
    <div class="pull-right">
      <%= link_to "Add New", new_admin_email_marketing_path, :class => "btn btn-primary"  %>
    </div>

    <div class="row">
      <% if notice %>
        <div class="col-md-6 col-md-offset-3">
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Message!</h4>
            <%= notice %>
          </div>
        </div>
      <% end %>
    </div>


  </div>
  <!-- /.box-header -->
  <div class="box-body">

    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Sender Name</th>
        <th>Sender Email</th>
        <th>Reciver Email</th>
        <th>Email Subject</th>
        <th>Send Date</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @email_marketings.each do |email_marketing| %>

        <tr>
          <td><%= email_marketing.sender_name %></td>
          <td><%= email_marketing.sender_email %></td>
          <td><%= email_marketing.reciver_email %></td>
          <td><%= email_marketing.email_subject %></td>
          <td><%= email_marketing.created_at %></td>
          <td>

            <%= link_to edit_admin_email_marketing_path(email_marketing) , :class=> "btn btn-success" do %>
              <%= fa_icon "edit" %>
            <% end %>

            <%= link_to email_marketing, method: :delete , data: { confirm: "Are you sure ? "} ,:class =>"btn btn-danger" do %>
              <%= fa_icon "trash" %>
            <% end %>

          </td>
        </tr>

      <% end %>


      </tbody>
    </table>
  </div>
</div>

