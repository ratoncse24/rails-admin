<div class="box">
  <div class="box-header">
    <h3 class="box-title">All Categories </h3>
    <div class="pull-right">
      <%= link_to "Add New", new_admin_category_path, :class => "btn btn-primary"  %>
    </div>

    <div class="row">
      <% if notice %>
      <div class="col-md-6 col-md-offset-3">
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><i class="icon fa fa-check"></i> Message!</h4>
          <%= notice %>
        </div>
      </div>
        <% end %>
    </div>


  </div>
  <!-- /.box-header -->
  <div class="box-body">

    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Total Products</th>
        <th>Description</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>

      <tr>
        <td><%= category.name %></td>
        <td><%= status_tag(category.status) %></td>
        <td><%= category.products.count %></td>
        <td><%= category.description %></td>
        <td>
          <% if category.image.attached? %>
          <%= image_tag category.preview %>
            <% end %>

        </td>
        <td>

          <%= link_to edit_admin_category_path(category) , :class=> "btn btn-success" do %>
            <%= fa_icon "edit" %>
          <% end %>

          <%= link_to category, method: :delete , data: { confirm: "Are you sure ? "} ,:class =>"btn btn-danger" do %>
            <%= fa_icon "trash" %>
          <% end %>

        </td>
      </tr>

        <% end %>


      </tbody>
    </table>
  </div>
</div>