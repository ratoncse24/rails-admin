<div class="box">
  <div class="box-header">
    <h3 class="box-title">Setting </h3>
    <div class="pull-right">
      <%= link_to "Add New", new_admin_setting_path, :class => "btn btn-primary"  %>
    </div>

    <div class="row">
      <% if notice %>
        <div class="col-md-6 col-md-offset-3">
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Message!</h4>
            <%= notice %>
          </div>
        </div>
      <% end %>
    </div>


  </div>
  <!-- /.box-header -->
  <div class="box-body">

    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Company Name</th>
        <th>Title</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
        <th>Logo</th>
        <th>Fevicon</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @settings.each do |setting| %>

        <tr>
          <td><%= setting.company_name %></td>
          <td><%= setting.company_title %></td>
          <td><%= setting.company_phone %></td>
          <td><%= setting.company_email %></td>
          <td><%= setting.company_address %></td>
          <td>
            <% if setting.logo.attached? %>
              <%= image_tag setting.logo_thumbnail %>
            <% end %>
          </td>
          <td>
            <% if setting.fevicon.attached? %>
              <%= image_tag setting.fevicon_thumbnail %>
            <% end %>
          </td>

          <td>

            <%= link_to edit_admin_setting_path(setting) , :class=> "btn btn-success" do %>
              <%= fa_icon "edit" %>
            <% end %>

            <%= link_to setting, method: :delete , data: { confirm: "Are you sure ? "} ,:class =>"btn btn-danger" do %>
              <%= fa_icon "trash" %>
            <% end %>

          </td>
        </tr>

      <% end %>


      </tbody>
    </table>
  </div>
</div>