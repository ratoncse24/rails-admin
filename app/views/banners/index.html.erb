<div class="box">
  <div class="box-header">
    <h3 class="box-title">Banners </h3>
    <div class="pull-right">
      <%= link_to "Add New", new_banner_path, :class => "btn btn-primary"  %>
    </div>

    <div class="row">
      <% if notice %>
        <div class="col-md-6 col-md-offset-3">
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Message!</h4>
            <%= notice %>
          </div>
        </div>
      <% end %>
    </div>


  </div>
  <!-- /.box-header -->
  <div class="box-body">

    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Link</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @banners.each do |banner| %>

        <tr>
          <td><%= banner.title %></td>
          <td>
            <% if banner.status == 1 %>
              <span class="label label-success">Active</span>
            <% else %>
              <span class="label label-warning">DeActive</span>
            <% end %>

          </td>
          <td><%= banner.link %></td>
          <td>
            <% if banner.image.attached? %>
              <%= image_tag banner.image.variant(resize: '100x50!').processed %>
            <% end %>

          </td>
          <td>

            <%= link_to edit_banner_path(banner) , :class=> "btn btn-success" do %>
              <%= fa_icon "edit" %>
            <% end %>

            <%= link_to banner, method: :delete , data: { confirm: "Are you sure ? "} ,:class =>"btn btn-danger" do %>
              <%= fa_icon "trash" %>
            <% end %>

          </td>
        </tr>

      <% end %>


      </tbody>
    </table>
  </div>
</div>