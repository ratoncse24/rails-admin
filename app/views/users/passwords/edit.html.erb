<h4 class="text-center text-success">Change your password</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>


  <div class="form-group has-feedback">
    <%= f.password_field :password , autofocus: true,  :class=>'form-control', :placeholder=>'Enter Password' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>


  <div class="form-group has-feedback">
    <%= f.password_field :password_confirmation ,  :class=>'form-control', :placeholder=>'Confirm new password' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>


  <div class="row">
    <div class="col-xs-4">

    </div>
    <!-- /.col -->
    <div class="col-xs-8">
      <%= f.submit 'Change my password', :class=>'btn btn-primary btn-block btn-flat' %>
    </div>
    <!-- /.col -->
  </div>


<% end %>

<%= render "users/shared/links" %>
