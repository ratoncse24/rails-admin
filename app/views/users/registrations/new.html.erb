<h4 class="text-center text-success">Sign up</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group has-feedback">
    <%= f.text_field :name , autofocus: true, :class=>'form-control', :placeholder=>'Enter Name' %>
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.email_field :email , :class=>'form-control', :placeholder=>'Enter Email' %>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.password_field :password ,   :class=>'form-control', :placeholder=>'Enter password' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.password_field :password_confirmation ,  :class=>'form-control', :placeholder=>'Confirm new password' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>



  <div class="row">
    <div class="col-xs-8">

    </div>
    <!-- /.col -->
    <div class="col-xs-4">
      <%= f.submit 'Sign up', :class=>'btn btn-primary btn-block btn-flat' %>
    </div>
    <!-- /.col -->
  </div>
<% end %>
